#!/usr/bin/make -f

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	$(MAKE) clean

	dh_clean

build: build-stamp
build-stamp:
	dh_testdir

	$(MAKE)

	$(MAKE) utests

ifeq ($(PERFORM_ITESTS), 1)
	$(MAKE) itests
endif

	touch build-stamp

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	$(MAKE) PREFIX=$(CURDIR)/debian/tmp/usr install

	cp debian/addon/*.gpr debian/tmp/usr/share/ada/adainclude

binary: binary-arch

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_install --fail-missing
	dh_lintian
	dh_strip --dbg-package=pcscada-dbg
	dh_compress -X.ads -X.adb
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-indep:

.PHONY: clean build install binary binary-arch binary-indep
